---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Eminem - Gallery">
  <main class="max-w-[800px] mx-auto p-4">
    <h1 class="text-4xl font-bold mb-8 text-white">Galer√≠a de Eminem</h1>

    <div class="bento-grid">
      <div class="bento-item">
        <img src="/public/eminem-12.jpg" alt="Eminem 4" class="w-full h-auto" />
      </div>

      <div class="bento-item">
        <img src="/public/eminem-5.jpg" alt="Eminem 5" class="w-full h-auto" />
      </div>

      <div class="bento-item">
        <img src="/public/eminem-6.jpg" alt="Eminem 6" class="w-full h-auto" />
      </div>

      <div class="bento-item">
        <img src="/public/eminem-7.jpg" alt="Eminem 7" class="w-full h-auto" />
      </div>

      <div class="bento-item">
        <img src="/public/eminem-8.jpg" alt="Eminem 8" class="w-full h-auto" />
      </div>

      <div class="bento-item">
        <img src="/public/eminem-9.jpg" alt="Eminem 9" class="w-full h-auto" />
      </div>

      <div class="bento-item">
        <img
          src="/public/eminem-10.webp"
          alt="Eminem 10"
          class="w-full h-auto"
        />
      </div>

      <div class="bento-item">
        <img
          src="/public/eminem-11.jpg"
          alt="Eminem 10"
          class="w-full h-auto"
        />
      </div>
    </div>
  </main>
</Layout>

<style>
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }

  .bento-item {
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: 8px;
  }

  .bento-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .bento-item:hover img {
    transform: scale(1.1);
    transition: 1.2s;
  }
</style>
